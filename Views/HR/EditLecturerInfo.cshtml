@model CMCS.Models.LectureClaim

@{
    ViewData["Title"] = "Edit Lecturer Information";
}

<h1>Edit Lecturer Information</h1>



<form asp-action="EditLecturerInfo" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.LecturerName" required />
    </div>

    <div class="form-group">
        <label for="Surname">Surname</label>
        <input type="text" class="form-control" id="Surname" name="Surname" value="@Model.LecturerSurname" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.LecturerEmail" required />
    </div>

    <input type="hidden" name="ClaimID" value="@Model.ClaimID" />

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("ApprovedClaimsSummary")">Back to Approved Claims</a>
